<p style="color: green"><%= notice %></p>

<h1 class='heading-todo'>Todos</h1>

<div class='list-todo'>
<div class='list' id="todos">
  <% @todos.each do |todo| %>
    <%= render todo %>
    <p>
      <%= link_to "Show this todo", todo %>
    </p>
  <% end %>
</div>

<div>
<button class='btn btn-new'>
<%= link_to "New todo", new_todo_path %>
</div>
</div>
</button>